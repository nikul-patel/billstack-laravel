{
    "name": "billstack/laravel",
    "description": "A Laravel invoicing and billing system for small businesses",
    "type": "project",
    "require": {
        "php": "^8.3",
        "laravel/framework": "^12.0",
        "laravel/sanctum": "^4.0",
        "laravel/tinker": "^2.9",
        "spatie/laravel-permission": "^6.0",
        "barryvdh/laravel-dompdf": "^3.0",
        "laravel/nightwatch": "^1.19"
    },
    "require-dev": {
        "laravel/pint": "^1.13",
        "laravel/sail": "^1.30",
        "mockery/mockery": "^1.5",
        "nunomaduro/collision": "^8.1",
        "phpunit/phpunit": "^12.0",
        "laravel/boost": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-install-cmd": [
            "@php -r \"if (!is_dir('storage/framework/cache/data')) { mkdir('storage/framework/cache/data', 0777, true); }\"",
            "@php -r \"if (!is_dir('storage/logs')) { mkdir('storage/logs', 0777, true); }\"",
            "@php -r \"if (!is_dir('bootstrap/cache')) { mkdir('bootstrap/cache', 0777, true); }\""
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ]
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
